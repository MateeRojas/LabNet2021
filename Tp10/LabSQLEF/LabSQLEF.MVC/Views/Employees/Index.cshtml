@model List<LabSQLEF.MVC.Models.EmployeesView>
@{
    ViewBag.Title = "Empleados";
}

<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Apellido</th>
            <th scope="col">Nombre</th>
            <th scope="col">Ciudad</th>
            <th scope="col">País</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
        <tr>
            <td>@emp.ID</td>
            <td>@emp.LastName</td>
            <td>@emp.Name</td>
            <td>@emp.City</td>
            <td>@emp.Country</td>
            <td>@Html.ActionLink("Borrar", "Delete", new { id = emp.ID }, new { onclick = "return confirm('¿Desea borrar definitivamente el empleado?')" })</td>
        </tr>

        }
    </tbody>
</table>

<div>

   @Html.ActionLink("Agregar o actualizar empleado", "UpdateOrInsert", "Employees")
</div>

